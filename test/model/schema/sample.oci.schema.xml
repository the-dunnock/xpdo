<?xml version="1.0" encoding="UTF-8"?>
<model package="sample" baseClass="xPDOObject" platform="oci" version="1.1">
    <object class="Person" table="person" extends="xPDOSimpleObject">
        <field key="first_name" dbtype="varchar2" precision="100" phptype="string" null="false" default="" />
        <field key="last_name" dbtype="varchar2" precision="100" phptype="string" null="false" default="" />
        <field key="middle_name" dbtype="varchar2" precision="100" phptype="string" null="false" default="" />
        <field key="date_modified" dbtype="timestamp" phptype="timestamp" null="false" default="CURRENT_TIMESTAMP" />
        <field key="dob" dbtype="date" phptype="date" null="true" />
        <field key="gender" dbtype="varchar2" precision="1" phptype="string" null="false" default="" attributes="CHECK (&quot;gender&quot; IN('','M','F'))" />
        <field key="blood_type" dbtype="varchar2" precision="100" phptype="string" null="true" />
        <field key="username" dbtype="varchar2" precision="255" phptype="string" null="false" index="unique" />
        <field key="password" dbtype="varchar2" precision="255" phptype="password" null="false" default="" />
        <field key="security_level" dbtype="INTEGER" phptype="integer" null="false" default="1" />

        <alias key="date_of_birth" field="dob" />

        <index alias="username" name="username" primary="false" unique="true" type="BTREE">
            <column key="username" collation="A" null="false" />
        </index>

        <composite alias="PersonPhone" class="PersonPhone" local="id" foreign="person" cardinality="many" owner="local" />
        <aggregate alias="BloodType" class="BloodType" local="blood_type" foreign="type" cardinality="one" owner="foreign" />

        <validation class="validation.xPDOValidator">
            <rule field="dob" name="date_format" type="preg_match" rule="/\d{4}-\d{2}-\d{2}/" />
            <rule field="password" name="password_length" type="xPDOValidationRule" rule="xPDOMinLengthValidationRule" value="6" />
        </validation>
    </object>
    <object class="PersonPhone" table="person_phone" extends="xPDOObject">
        <field key="person" dbtype="INTEGER" phptype="integer" null="false" index="pk" />
        <field key="phone" dbtype="INTEGER" phptype="integer" null="false" index="pk" />
        <field key="is_primary" dbtype="INTEGER" phptype="boolean" null="false" default="0" />

        <index alias="PRIMARY" name="PRIMARY" primary="true" unique="true" type="BTREE">
            <column key="person" collation="A" null="false" />
            <column key="phone" collation="A" null="false" />
        </index>

        <aggregate alias="Person" class="Person" local="person" foreign="id" cardinality="one" owner="foreign" />
        <composite alias="Phone" class="Phone" local="phone" foreign="id" cardinality="one" owner="foreign" />
    </object>
    <object class="Phone" table="phone" extends="xPDOSimpleObject">
        <field key="type" dbtype="varchar2" precision="20" phptype="string" null="false" default="" />
        <field key="number" dbtype="varchar2" precision="20" phptype="string" null="false" />
        <field key="date_modified" dbtype="timestamp" phptype="timestamp" null="false" default="CURRENT_TIMESTAMP" />

        <composite alias="PersonPhone" class="PersonPhone" local="id" foreign="phone" cardinality="many" owner="local" />
    </object>
    <object class="xPDOSample" table="xpdosample" extends="xPDOSimpleObject">
        <field key="parent" dbtype="INTEGER" phptype="integer" null="false" default="0" />
        <field key="unique_varchar2" dbtype="varchar2" precision="255" phptype="string" null="false" index="unique" />
        <field key="varchar2" dbtype="varchar2" precision="100" phptype="string" null="false" />
        <field key="text" dbtype="varchar2" precision="2000" phptype="string" null="true" />
        <field key="timestamp" dbtype="timestamp" phptype="timestamp" null="false" default="CURRENT_TIMESTAMP" />
        <field key="unix_timestamp" dbtype="INTEGER" phptype="integer" null="false" default="0" />
        <field key="date_time" dbtype="varchar2" precision="100" phptype="datetime" null="true" />
        <field key="date" dbtype="date" phptype="date" null="true" />
        <field key="enum" dbtype="varchar2" precision="1" phptype="string" null="false" attributes="CHECK (&quot;enum&quot; IN('','T','F'))"/>
        <field key="password" dbtype="varchar2" precision="255" phptype="string" null="false" />
        <field key="integer" dbtype="INTEGER" phptype="integer" null="false" />
        <field key="float" dbtype="number" precision="10,5" phptype="float" null="false" default="1.01230" />
        <field key="boolean" dbtype="INTEGER" phptype="boolean" null="false" />

        <index alias="unique_varchar2" name="unique_varchar2" primary="false" unique="true" type="BTREE">
            <column key="unique_varchar2" collation="A" null="false" />
        </index>
    </object>
    <object class="BloodType" table="blood_types" extends="xPDOObject">
        <field key="type" dbtype="varchar2" precision="100" phptype="string" null="false" index="pk" />
        <field key="description" dbtype="varchar2" precision="2000" phptype="string" null="true" />

        <index alias="PRIMARY" name="PRIMARY" primary="true" unique="true" type="BTREE">
            <column key="type" collation="A" null="false" />
        </index>

        <aggregate alias="Person" class="Person" local="type" foreign="blood_type" cardinality="many" owner="foreign" />
    </object>
    <object class="Item" table="items" extends="xPDOSimpleObject">
        <field key="name" dbtype="varchar2" precision="255" phptype="string" null="false" default="" index="fk" />
        <field key="color" dbtype="varchar2" precision="255" phptype="string" null="false" default="green" index="fk" />
        <field key="description" dbtype="varchar2" precision="2000" phptype="string" null="true" />
        <field key="date_modified" dbtype="timestamp" phptype="timestamp" null="false" default="CURRENT_TIMESTAMP" />
    </object>

    <index name="name" primary="false" unique="true">
        <column key="name" length="" collation="A" null="false" />
    </index>
    <index name="color" primary="false" unique="false">
        <column key="color" length="" collation="A" null="false" />
    </index>
</model>
